<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_margin="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".authorizationAndAuthentication.ResisterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:borderColor="#4D5151"
        app:borderWidth="1dp"
        app:cornerRadius="15dp">

        <EditText
            android:id="@+id/name"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/foredittext"
            android:hint="Enter your Name"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:backgroundTint="#92000000"
            android:textColorHint="#4D5151"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:borderColor="#4D5151"
        app:borderWidth="1dp"
        app:cornerRadius="15dp">

        <EditText
            android:id="@+id/phone"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/foredittext"
            android:hint="Phone Number"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:backgroundTint="#92000000"
            android:textColorHint="#4D5151"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:borderColor="#4D5151"
        app:borderWidth="1dp"
        app:cornerRadius="15dp">

        <EditText
            android:id="@+id/emailEt"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/foredittext"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:backgroundTint="#92000000"
            android:textColorHint="#4D5151"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:borderColor="#4D5151"
        app:borderWidth="1dp"
        app:cornerRadius="15dp">

        <EditText
            android:id="@+id/passwordEt"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/foredittext"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:backgroundTint="#92000000"
            android:textColorHint="#4D5151"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:borderColor="#4D5151"
        app:borderWidth="1dp"
        app:cornerRadius="15dp">

        <EditText
            android:id="@+id/location"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/foredittext"
            android:hint="Location"
            android:padding="22dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:backgroundTint="#92000000"
            android:textColorHint="#4D5151"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <CheckBox
        android:id="@+id/saveLoginCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="I agree to the Privacy Policy and Trams condition of evaly"
        android:textColor="#100C0C" />
    <Button
        android:id="@+id/signupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/forbtn"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="Sign Up"
        android:textAllCaps="false" />

</LinearLayout>